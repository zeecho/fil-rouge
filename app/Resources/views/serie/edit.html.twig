{% extends 'base.html.twig' %}

{% block body %}
    <h1>Édition de {{ serie.name }}</h1>

    {{ form_start(edit_form) }}
        {#{{ form_widget(edit_form) }}#}
        {{ form_row(edit_form.name, {'label': 'Nom de la série', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(edit_form.summary, {'label': 'Résumé', 'attr': {'class': 'form-control', 'rows': '4'}}) }}
        {{ form_row(edit_form.poster, {'label': 'Affiche', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(edit_form.releaseDate, {'label': 'Date de diffusion', 'attr': {'class': 'form-group'}}) }}
        {{ form_row(edit_form.genres, {'label': 'Genre', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(edit_form.countries, {'label': 'Pays d\'origine', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(edit_form.language, {'label': 'Langue originale', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(edit_form.casting, {'label': 'Acteurs', 'attr': {'class': 'form-control'}}) }}
        {{ form_row(edit_form.directors, {'label': 'Réalisateurs', 'attr': {'class': 'form-control'}}) }}
        {% include ':buttons:edit.html.twig' %}
    {{ form_end(edit_form) }}

    <a href="{{ path('serie_show', { id: serie.id }) }}"><button class="btn btn-default">Annuler</button></a>
    {% include ':form_parts:delete.html.twig' %}
{% endblock %}
